<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardMaxElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/item_img_poster"
            android:layout_width="84dp"
            android:layout_height="96dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/poster_arrow" />

        <TextView
            android:id="@+id/item_txt_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat_semi_bold"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/item_img_poster"
            app:layout_constraintTop_toTopOf="@id/item_img_poster"
            app:layout_constraintBottom_toTopOf="@id/item_txt_category"
            tools:text="@tools:sample/lorem" />

        <TextView
            android:id="@+id/item_txt_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toTopOf="@id/item_txt_status"
            app:layout_constraintStart_toEndOf="@id/item_img_poster"
            app:layout_constraintTop_toBottomOf="@id/item_txt_title"
            tools:text="Category" />

        <TextView
            android:id="@+id/item_txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Released"
            app:layout_constraintTop_toBottomOf="@id/item_txt_category"
            app:layout_constraintBottom_toBottomOf="@id/item_img_poster"
            app:layout_constraintStart_toEndOf="@id/item_img_poster"
            android:layout_marginStart="16dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>